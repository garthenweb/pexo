{
  "compilerOptions": {
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@pexo/core": ["packages/core/src/core.ts"],
      "@pexo/request": ["packages/request/src/request.ts"],
      "@pexo/utils": ["packages/utils/src/utils.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "./packages/*/bin",
    "./packages/*/lib"
  ]
}
