{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": false,
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
